{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@mlt/utils": ["./src/utils"],
      "@mlt/styles": ["./src/styles"],
      "@mlt/styles/*": ["./src/styles/*"],
      "@mlt/navigation": ["./src/navigation"],
      "@mlt/navigation/*": ["./src/navigation/*"],
      "@mlt/lib/*": ["./src/lib/*"],
      "@mlt/screens/*": ["./src/screens/*"],
      "@mlt/screens": ["./src/screens"],
      "@mlt/helpers": ["./src/helpers"],
      "@mlt/helpers/*": ["./src/helpers/*"],
      "@mlt/hooks": ["./src/hooks"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
